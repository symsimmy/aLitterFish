<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
  <constant name="struts.il8n.encoding" value="utf-8"/>
  <package name="default" extends="struts-default" namespace="/">
  <action name="login" class="com.lab.actions.LoginAction">
  <!-- 去掉那个method="login"，因为你的action里面并没有此方法。
  action会自动调用execute方法，只有定义了自己的execute方法才会在action中指出来。 -->
    <result name="success" type="dispatcher">/pages/index.jsp</result>
    <result name="input" type="redirect">/pages/login.jsp</result>
  </action>
  </package>
  
  
</struts>
